{# @TODO: add if statements around fields that are optional #}
{# VARIABLES #}
{% set tag = tag %}
{% set header = header %}
{% set img = img %}
{% set text = text %}
{% set link_text = link_text %}
{% set link_url = link_url %}
{% set link_text_2 = link_text_2 %}
{% set link_url_2 = link_url_2 %}
{% set ts_bg_color = ts_bg_color %}

{% set classes = [
  'hero--fancy-'~ pgType,
  ts_bg_color,
]
%}

<div{{ attributes.addClass( classes ) }}>
  <div class="p-site xl:container">
    <div class="py-md md:py-2xl w-2/3 xl:w-1/2">
      {# Main Column #}
      <div>
        <div class="h4 mb-xs md:mb-sm text-accent">{{ tag }}</div>
        <h1 class="h1 mb-xs text-high-contrast">{{ header }}</h1>
        <div class="body mb-base text-md-contrast">{{ text }}</div>
        {% include "@ts_patterns/assets/btns/btn-primary/btn-primary.html.twig" with {
          link_text: link_text,
          link_url: link_url,
          link_classes: 'inline-block mb-base mr-base'
        } %}
        {% include "@ts_patterns/assets/btns/btn-primary/btn-primary.html.twig" with {
          link_text_2: link_text_2,
          link_url_2: link_url_2,
          link_classes: 'inline-block'
        } %}
      </div>
    </div>
    <div> {# Right Column #}
      {% if img.0 %}
        <div class="">
          {{ img }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

